<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#001933" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/updateInfo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#001933" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/FirstName"
                style="@style/EditTextStyle"
                android:hint="@string/FirstName"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:focusable="true" 
				android:focusableInTouchMode="true"
                 />

            <EditText
                android:id="@+id/LastName"
                style="@style/EditTextStyle"
                android:hint="@string/LastName"
                android:imeOptions="actionNext"
                android:inputType="textPersonName" />

            

            <EditText
                android:id="@+id/phone1"
                style="@style/EditTextStyle"
                android:hint="@string/phone1"
                android:imeOptions="actionNext"
                android:inputType="phone" />

            <EditText
                android:id="@+id/phone2"
                style="@style/EditTextStyle"
                android:hint="@string/phone2"
                android:imeOptions="actionNext"
                android:inputType="phone" />

            <EditText
                android:id="@+id/address"
                style="@style/EditTextStyle"
                android:hint="@string/address"
                android:imeOptions="actionNext" />

            <TextView
                style="@style/TextViewStyle"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/country" />

            <Spinner
                android:id="@+id/country"
                style="@style/SpinnerStyle"
                android:prompt="@string/country" 
                
               	
                />

            <TextView
                style="@style/TextViewStyle"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/state" />

            <Spinner
                android:id="@+id/state"
                style="@style/SpinnerStyle"
                android:prompt="@string/state" />

            <TextView
                style="@style/TextViewStyle"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/city" />

            <Spinner
                android:id="@+id/city"
                style="@style/SpinnerStyle"
                android:prompt="@string/city" />

            <EditText
                android:id="@+id/zipcode"
                style="@style/EditTextStyle"
                android:hint="@string/zipcode"
                android:imeOptions="actionDone"
                android:inputType="number"
                 />

            

          

            <Button
                android:id="@+id/signupBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:text="@string/title_activity_sign_up" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>