<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jc.b2b"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/mycustomtheme" >
        <activity
            android:name="com.jc.b2b.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jc.b2b.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.jc.b2b.SignUp"
            android:configChanges="keyboard|orientation"
            android:label="@string/title_activity_sign_up"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.jc.b2b.RegisterationActivity"
            android:label="@string/title_activity_registeration" >
        </activity>
        <activity
            android:name="com.jc.b2b.CustomerArea"
            android:label="@string/title_activity_customer_area" >
        </activity>
        <activity
            android:name="com.jc.b2b.Admin_area"
            android:label="@string/title_activity_admin_area" >
        </activity>
        <activity
            android:name="com.jc.b2b.PayFine"
            android:label="@string/title_activity_pay_fine" >
        </activity>
        <activity
            android:name="com.paypal.android.MEP.PayPalActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.jc.b2b.Retailer_area"
            android:label="@string/title_activity_retailer_area" >
        </activity>
        <activity
            android:name="com.jc.b2b.Supplier_area"
            android:label="@string/title_activity_retailer_area" >
        </activity>
        <activity
            android:name="com.jc.b2b.FirstTimeLogin"
            android:label="@string/title_activity_first_time_login" >
        </activity>

        <service
            android:name="com.jc.b2b.FetchImage"
            android:enabled="true"
            >
        </service>
    </application>

</manifest>